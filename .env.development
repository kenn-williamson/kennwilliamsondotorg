# Development Environment Configuration
DB_USER=postgres
DB_PASSWORD=password
JWT_SECRET=development-jwt-secret-key-change-in-production
DOMAIN_NAME=localhost
CERTBOT_EMAIL=dev@localhost
# Backend API URLs - Used with API_ROUTES constants
NUXT_API_BASE=http://backend:8080/backend
NUXT_PUBLIC_API_BASE=https://localhost/backend
CORS_ORIGIN=http://localhost:3000
RUST_LOG=backend=debug,actix_web=debug,actix_server=info,actix_web::middleware::logger=info

# Session management for Nuxt Auth Utils (minimum 32 characters)
NUXT_SESSION_PASSWORD=development-session-password-32-chars-minimum-required-for-nuxt-auth-utils

# Email Verification
FRONTEND_URL=https://localhost

# AWS SES Configuration (for local testing with AWS credentials)
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@kennwilliamson.org
SES_REPLY_TO_EMAIL=kenngineering@gmail.com

# Token Cleanup (runs every N hours, default: 24)
CLEANUP_INTERVAL_HOURS=24

# Google OAuth (optional - uncomment and add real credentials to enable)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_REDIRECT_URI=https://localhost/auth/google/callback
# Note: Redirect URI points to frontend page, not backend API

# Skip automatic migrations in development (use setup-db.sh instead)
SKIP_MIGRATIONS=true