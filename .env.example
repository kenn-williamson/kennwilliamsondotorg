# Database Configuration
DB_USER=postgres
DB_PASSWORD=secure-database-password-here

# JWT Authentication
JWT_SECRET=super-secret-jwt-key-at-least-32-characters-long

# Session Management (minimum 32 characters required)
NUXT_SESSION_PASSWORD=super-secret-session-password-at-least-32-characters-long

# Domain Configuration
DOMAIN_NAME=kennwilliamson.org
CERTBOT_EMAIL=your-email@example.com

# API Configuration
# Internal server-side API URL (Docker network)
NUXT_API_BASE=http://backend:8080/backend
# Public client-side API URL
NUXT_PUBLIC_API_BASE=https://kennwilliamson.org/backend
CORS_ORIGIN=https://kennwilliamson.org

# Frontend URL (for email links)
FRONTEND_URL=https://kennwilliamson.org

# Redis Configuration
REDIS_URL=redis://redis:6379

# Google OAuth (optional - leave blank to disable)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://kennwilliamson.org/auth/google/callback

# AWS Configuration (IAM role handles credentials on EC2)
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@kennwilliamson.org
SES_REPLY_TO_EMAIL=me@kennwilliamson.org
SES_CONFIGURATION_SET_NAME=kennwilliamsondotorg-production

# Token Cleanup Configuration (optional, default: 24 hours)
CLEANUP_INTERVAL_HOURS=24

# Bot Protection - Cloudflare Turnstile (optional)
# Get keys from: https://dash.cloudflare.com/
# For testing, use Cloudflare's test keys:
#   Secret: 1x0000000000000000000000000000000AA
#   Site:   1x00000000000000000000AA
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
NUXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key

# Development: Disable email sending (optional, default: false)
# Set to true to log emails to console instead of sending via SES
# DISABLE_EMAIL_SENDING=false

# Logging
RUST_LOG=backend=info,actix_web=info

# Development overrides (uncomment for local development)
# NUXT_API_BASE=http://backend:8080/backend
# NUXT_PUBLIC_API_BASE=https://localhost/backend
# CORS_ORIGIN=https://localhost
# FRONTEND_URL=https://localhost